[Unit]
Description=Covid 19 Khmer
Wants=network.target
After=network.target

[Service]
Type=simple
User=deployer
WorkingDirectory=/home/deployer/production/cambodia-covid19-tracker
ExecStart=/bin/bash -lc 'bundle exec pumactl -S /home/deployer/production/cambodia-covid19-tracker/tmp/pids/puma.state -F /home/deployer/production/cambodia-covid19-tracker/config/puma.rb start'
ExecStop=/bin/bash -lc 'bundle exec pumactl -S /home/deployer/production/cambodia-covid19-tracker/tmp/pids/puma.state -F /home/deployer/production/cambodia-covid19-tracker/config/puma.rb stop'
ExecReload=/bin/bash -lc 'bundle exec pumactl -S /home/deployer/production/cambodia-covid19-tracker/tmp/pids/puma.state -F /home/deployer/production/cambodia-covid19-tracker/config/puma.rb restart'
TimeoutSec=30
RestartSec=15s
Restart=always
#RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
